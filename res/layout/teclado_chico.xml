<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        
        
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/botones_remarcos_sin_padding"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tc_texto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/botones_remarcos_sin_padding"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/cantidad_comensales"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/keyboard_texto_chico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/main_color_fondo"
                android:lines="1"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboardviewchico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:keyBackground="@drawable/keyboard_selected"
                android:keyTextColor="@color/white"
                android:keyTextSize="40sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_tc_salir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/color_btn_menu"
                    android:gravity="center"
                    android:text="@string/salir"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_tc_aceptar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/colorEnviar"
                    android:gravity="center"
                    android:text="@string/aceptar"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>