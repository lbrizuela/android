<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="horizontal"
    android:weightSum="1" xmlns:app="http://schemas.android.com/apk/res/com.example.restaurant">

    <FrameLayout
        android:id="@+id/ll_mp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/main_tv_fecha_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="@dimen/activity_vertical_margin_botones"
                    android:text="04/08/16 00:01:02"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <ImageButton
                    android:id="@+id/img_llamar_mozo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@color/transparent"
                    android:paddingRight="@dimen/activity_vertical_margin_botones"
                    android:src="@drawable/ic_bell_ring_black_48dp" />

                <ImageButton
                    android:id="@+id/img_carro_compra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/img_llamar_mozo"
                    android:background="@color/transparent"
                    android:paddingRight="@dimen/activity_vertical_margin_botones"
                    android:src="@drawable/ic_basket_black_48dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_lista_platos"
                    android:layout_width="540dp"
                    android:layout_height="627dp"
                    android:paddingBottom="135dp"
                    android:orientation="vertical" >
                    
                    <android.support.design.widget.TabLayout
                        android:id="@+id/simpleTabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabMode="fixed"
                        app:tabTextColor="#ffffff"
                        app:tabSelectedTextColor="#ffff00"
                        style="@style/MyCustomTabLayout"
                         />
                    
                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_descripcion_articulo"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imagen_plato"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/borde_blanco" 
                        android:visibility="gone"/>
                    
                      <RelativeLayout
                        android:id="@+id/rl_mp_imagen"  
                      	android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="15dp" 
                        android:background="@drawable/borde_blanco" >

                        <ProgressBar
                            android:id="@+id/pb_mp_imagen"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true" />

                        <TextView
                            android:id="@+id/tv_mp_imagen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@string/cargando_espera"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Ingredientes: "
                            android:textColor="@color/white"
                            android:textSize="30dp" 
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/ingredientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text=" oliva, tomates, harinas. "
                            android:textColor="@color/white"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="LIKES  "
                            android:textColor="@color/white"
                            android:textSize="30dp" />

                        <RatingBar
                            android:id="@+id/estrellas_plato"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_mp_agregar_al_carro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/botones_grey"
                        android:gravity="center"
                        android:text="Agregar al Carro"
                        android:textColor="@color/white"
                        android:textSize="30dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/main_img_logo"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_logo" />
        </LinearLayout> 
    </FrameLayout>
    
    
    <FrameLayout
        android:id="@+id/ll_mp_cargando"
        android:layout_width="550dp"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ProgressBar
                android:id="@+id/pb_mp_cargando_principal"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tv_mp_textoCargando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/cargando_espera"
                android:textColor="@color/white"
                android:textSize="60dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>