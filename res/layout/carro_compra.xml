<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/ll_cc_items"
        android:layout_width="550dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

           
            <LinearLayout
                android:id="@+id/ll_cc_botones"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal" >
                
                  <Button
                    android:id="@+id/btn_cc_negativo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/color_btn_menu"
                    android:gravity="center"
                    android:text="@string/salir"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

              
                
                <TextView
                   android:id="@+id/ll_cc_popupconfirm"
                   android:layout_width="300dp"
                   android:layout_height="match_parent"
                 
                   android:background="@color/black"
                   android:gravity="center"
                   android:text="@string/realizar_pedido"
                   android:textColor="@color/white"
                   android:textSize="40dp" />
                
                 <Button
                    android:id="@+id/btn_cc_positivo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                  
                    android:background="@color/colorEnviar"
                    android:gravity="center"
                    android:text="@string/pedir"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                
            </LinearLayout>

            <
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_cc_cardList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:scrollbars="vertical"
                 />

            
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/ll_cc_cargando"
        android:layout_width="550dp"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tv_textoCargando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/cargando_espera"
                android:textColor="@color/white"
                android:textSize="60dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>