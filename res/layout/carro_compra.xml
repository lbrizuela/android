<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="550dp"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ll_cc_popupconfirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="@string/realizar_pedido"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="425dp"
                android:orientation="vertical" >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_cc_cardList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="9.0dip"
                    android:paddingRight="9.0dip"
                    android:scrollbars="vertical"
                    android:width="80dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cc_botones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_cc_positivo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/colorEnviar"
                    android:gravity="center"
                    android:text="Pedir"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_cc_negativo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/color_btn_menu"
                    android:gravity="center"
                    android:text="Salir"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>